ampaign slogan ‘Glimpse the Unseen’.\r\n","title":"3D Peepshow World"},{"__typename":"WordPress_Project_Workfields_MainContent_Spacer","fieldGroupName":"Project_Workfields_MainContent_Spacer","size":"medium"},{"__typename":"WordPress_Project_Workfields_MainContent_Video","fieldGroupName":"Project_Workfields_MainContent_Video","videoType":"file","videoSize":"max_width","embedLink":null,"loop":true,"fileLink":{"mediaItemUrl":"https://content.kota.co.uk/app/uploads/2019/12/peepshow.mp4"},"posterImage":null},{"__typename":"WordPress_Project_Workfields_MainContent_Spacer","fieldGroupName":"Project_Workfields_MainContent_Spacer","size":"medium"}]}}}},"pageContext":{"title":"Penhaligon&#8217;s &#8211; Video Production","wordpressId":930,"slug":"penhaligons"}},"staticQueryHashes":["1167200107","2150184812","247101797","2816952889","2816952889","3018283195","3348478848","3599295316","438023921","919821642","919821642"]}